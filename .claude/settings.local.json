{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "bash",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '[.tool_input.command, .tool_input.description // \"No description\"] | join(\" - \")' >> ~/.claude/bash-command-log.txt"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "mcp__firecrawl__firecrawl_search"
    ]
  }
}